# Use strict-peer-dependencies to ensure compatible versions
strict-peer-dependencies=false

# Allow workspace packages to depend on each other
link-workspace-packages=true

# Hoisting settings for faster builds
shamefully-hoist=true

# Use this to deduplicate and minimize node_modules
public-hoist-pattern[]='*eslint*'
public-hoist-pattern[]='*prettier*'
public-hoist-pattern[]='*types*'
public-hoist-pattern[]='typescript'

# Cache settings
cache-dir=.pnpm-store